<?xml version="1.0" encoding="UTF-8" ?>

<config xmlns="http://thelia.net/schema/dic/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://thelia.net/schema/dic/config http://thelia.net/schema/dic/config/thelia-1.0.xsd">

    <forms>
        <form name="instagram.config" class="Instagram\Form\ConfigForm" />
    </forms>
    
    <hooks>
        <!-- front -->
        <hook id="instagram.hook.front" class="Instagram\Hook\FrontHook" scope="request">
            <tag name="hook.event_listener" event="main.footer-body" method="ShowInstagram" />
        </hook>
    </hooks>

</config>
